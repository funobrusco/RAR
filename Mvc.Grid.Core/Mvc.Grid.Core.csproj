    <Copyright>Copyright © NonFactors</Copyright>
    <PackageId>NonFactors.Grid.Core.Mvc6</PackageId>
    <RootNamespace>NonFactors.Mvc.Grid</RootNamespace>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
