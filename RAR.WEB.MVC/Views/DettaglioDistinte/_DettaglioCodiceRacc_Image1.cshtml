@model RAR.ViewModel.DettaglioCodiceRaccViewModel
<div>
    <p>
        <h6 style="text-align:center; color:navy;">Immagine AR:</h6>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Immagini presenti: @Model.countRaccomandate
                </th>
            </tr>
        </thead>
        @if (@Model.countRaccomandate > 0)
        {
            <tbody>
                <tr>
                    <td>
                        Raccomandata: @Model.raccomandata
                        @using (Html.BeginForm("RetrieveImages", "DettaglioDistinte", FormMethod.Post))
                        {
                            <input type="hidden" name="CodeRacc" value="@Model.raccomandata" />
                            <input type="submit" name="button" value="Cerca Immagini" class="btn btn-outline-primary btn-posta-style" />
                        }
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>
